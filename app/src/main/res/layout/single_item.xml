<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="3dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvNaziv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            tools:text="Naziv atrakcije" />

        <TextView
            android:id="@+id/tvAdresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNaziv"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textStyle="italic"
            tools:text="Adresa: Dunavska 1" />

        <TextView
            android:id="@+id/tvBrojTelefona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAdresa"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:textStyle="italic"
            tools:text="Broj telefona: 0641234567" />


        <TextView
            android:id="@+id/tvRadnoVreme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNaziv"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:textStyle="italic"
            tools:text="8-16h" />

        <TextView
            android:id="@+id/tvCena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAdresa"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:textStyle="italic"
            tools:text="Cena: 350eur" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>